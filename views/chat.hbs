<style>
    #msgs {
        padding-bottom: 10px;
        border: 2px
    }

    #formMsg {
        background-color: #fff;
        width: 100%;
        position: fixed;
        bottom: 0px;
        margin-block-end: 0;
    }

    #txtMsg {
        border: none;
        border: 1px solid rgba(0, 0, 0, .125);
        border-radius: .25rem;
        padding: 0 10px;
        width: 100%;
    }

    #btnEnviar {
        width: 20%;
        cursor: pointer;
        color: #fff;
        background-color: #343a40;
        border: none;
        border-top-right-radius: .25rem;
        border-bottom-right-radius: .25rem;
        text-align: center;
    }

    .send {
        margin-top: 3px;
        text-align: right;
        line-height: 2;
    }

    .received {
        margin-top: 3px;
        text-align: left;
        line-height: 2;
    }

    .send span {
        padding: 5px;
        border-radius: 5px;
        background-color: #dcf8c6;
    }

    .received span {
        padding: 5px;
        border-radius: 5px;
        background-color: #c5c5c5;
    }
</style>

<div id="msgs">
    {{#msgs }}
    {{#ifEquals ../idGet this.sender }}
    <p class="received">Recebido: <span>{{this.message}}</span></p>
    {{/ifEquals}}
    {{#ifEquals ../idGet this.recipient }}
    <p class="send">Enviado: <span>{{this.message}}</span></p>
    {{/ifEquals}}
    {{/msgs}}
</div>

<form name="formMsg" id="formMsg" onsubmit="return validateForm()" action="/chat?id={{idGet}}" method="POST"
    enctype="multipart/form-data">
    <label class="d-flex flex-row">
        <input id="txtMsg" name="msg" type="text required ">
        <input class="btn btn-dark" id="btnEnviar" type="submit" value="Send">
    </label>
    <input id="video" name="video" type="file">


</form>

<script>
    function validateForm() {
        var x = document.forms["formMsg"]["msg"].value;
        if (x == "") {
            alert("VocÃª precisa preencher uma mensagem");
            return false;
        }
    }
</script>